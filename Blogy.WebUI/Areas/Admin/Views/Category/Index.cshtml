@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@{
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3>Kategoriler</h3>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kategori Adı</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>@item.CategoryName</td>
                                <td>
                                    <a href="/Admin/Category/DeleteCategory/@item.Id" class="btn btn-danger">Sil</a>
                                    <a href="/Admin/Category/UpdateCategory/@item.Id" class="btn btn-info">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />

                <a href="/Admin/Category/CreateCategory" class="btn btn-primary">Yeni Kategori Oluştur</a>

            </div>
        </div>
    </div>
</div>