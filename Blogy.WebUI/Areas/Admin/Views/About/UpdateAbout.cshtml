@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3>Hakkımızda Güncelleştir</h3>
            <form method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label>Başlık1</label>
                    <input type="text" asp-for="Title1" class="form-control" />
                    <span class="text-danger" asp-validation-for="Title1"></span>
                </div>

                <div class="form-group">
                    <label>Açıklama1</label>
                    <textarea type="text" asp-for="Description1" class="form-control" rows="6"></textarea>
                    <span class="text-danger" asp-validation-for="Description1"></span>
                </div>

                <div class="form-group">
                    <label>Resim1</label>
                    <input type="text" asp-for="ImageUrl1" class="form-control" />
                    <span class="text-danger" asp-validation-for="ImageUrl1"></span>
                </div>
                <div class="form-group">
                    <label>Başlık2</label>
                    <input type="text" asp-for="Title2" class="form-control" />
                    <span class="text-danger" asp-validation-for="Title2"></span>
                </div>

                <div class="form-group">
                    <label>Açıklama2</label>
                    <textarea type="text" asp-for="Description2" class="form-control" rows="6"></textarea>
                    <span class="text-danger" asp-validation-for="Description2"></span>
                </div>

                <div class="form-group">
                    <label>Resim2</label>
                    <input type="text" asp-for="ImageUrl2" class="form-control" />
                    <span class="text-danger" asp-validation-for="ImageUrl2"></span>
                </div>


                <button class="btn btn-primary mt-2">Kaydet</button>

            </form>
        </div>
    </div>
</div>
