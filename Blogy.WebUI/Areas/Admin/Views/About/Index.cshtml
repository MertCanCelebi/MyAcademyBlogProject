@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@{
    int count = 0;
}



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3>Hakkımızda</h3>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık 1</th>
                            <th>Açıklama 1</th>
                            <th>Resim 1</th>
                            <th>Başlık 2</th>
                            <th>Açıklama 2</th>
                            <th>Resim 2</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>@item.Title1</td>
                                <td>@(item.Description1.Length > 50 ? item.Description1.Substring(0, 50) + "..." : item.Description1)</td>
                                <td> <img src="@item.ImageUrl1" style="height:75px;width:75px" /></td>
                                <td>@item.Title2</td>
                                <td>@(item.Description2.Length > 50 ? item.Description2.Substring(0, 50) + "..." : item.Description2)</td>
                                <td> <img src="@item.ImageUrl2" style="height:75px;width:75px" /></td>
                                <td>
                                    <a href="/Admin/About/DeleteAbout/@item.Id" onclick="return confirm('Bu öğeyi kalıcı olarak silmek istediğinizden emin misiniz?')" class="btn btn-danger">Sil</a>
                                    <a href="/Admin/About/UpdateAbout/@item.Id" class="btn btn-info">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />


                <a href="/Admin/About/CreateAbout" class="btn btn-primary">Yeni Hakkımızda Oluştur</a>



            </div>
        </div>
    </div>
</div>