@model List<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@{
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3>İletişim</h3>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Konum</th>
                            <th>Çalışma Saatleri</th>
                            <th>E mail</th>
                            <th>Telefon Numarası</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>@item.Location</td>
                                <td>@item.OpenHours</td>
                                <td>@item.Email</td>
                                <td>@item.PhoneNumber</td>
                                <td>
                                    <a href="/Admin/Contact/DeleteContact/@item.Id" onclick="return confirm('Bu öğeyi kalıcı olarak silmek istediğinizden emin misiniz?')" class="btn btn-danger">Sil</a>
                                    <a href="/Admin/Contact/UpdateContact/@item.Id" class="btn btn-info">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />


                <a href="/Admin/Contact/CreateContact" class="btn btn-primary">Yeni İletişim Alanı Ekle</a>



            </div>
        </div>
    </div>
</div>