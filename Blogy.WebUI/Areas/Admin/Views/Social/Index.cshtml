@model List<ResultSocialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@{
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3>Sosyal Medyalar</h3>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>İsim</th>
                            <th>Url</th>
                            <th>İcon</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>@item.Name</td>
                                <td>@item.Url</td>
                                <td>@item.Icon</td>
                                <td>
                                    <a href="/Admin/Social/DeleteSocial/@item.Id" onclick="return confirm('Bu öğeyi kalıcı olarak silmek istediğinizden emin misiniz?')" class="btn btn-danger">Sil</a>
                                    <a href="/Admin/Social/UpdateSocial/@item.Id" class="btn btn-info">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />


                <a href="/Admin/Social/CreateSocial" class="btn btn-primary">Yeni Sosyal Medya Ekle</a>



            </div>
        </div>
    </div>
</div>