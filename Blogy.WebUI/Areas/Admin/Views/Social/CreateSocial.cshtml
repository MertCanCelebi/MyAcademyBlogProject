@model CreateSocialDto
@{
    ViewData["Title"] = "CreateSocial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3>Yeni Sosyal Medya Oluştur</h3>
            <form method="post">

                <div class="form-group">
                    <label>İsim</label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>

                <div class="form-group">
                    <label>Url</label>
                    <input type="text" asp-for="Url" class="form-control" />
                    <span class="text-danger" asp-validation-for="Url"></span>
                </div>

                <div class="form-group">
                    <label>İcon</label>
                    <input type="text" asp-for="Icon" class="form-control" />
                    <span class="text-danger" asp-validation-for="Icon"></span>
                </div>
                

                <button class="btn btn-primary mt-2">Kaydet</button>

            </form>
        </div>
    </div>
</div>
