@model List<ResultUserDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
@{
    int count = 0;
}


            <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3>Kullanıcılar</h3>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                             <th>#</th>
        <th>Ad Soyad</th>
        <th>Kullanıcı Adı</th>
        <th>Email</th>
        <th>Roller</th>
        <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.FullName</td>
            <td>@item.UserName</td>
            <td>@item.Email</td>
            <td>@foreach(var role in item.Roles)
                {
                    <span class="badge text-primary">@role</span> <br />
                }
            </td>
            <td>
                <a href="/Admin/User/AssignRole/@item.Id" class="btn btn-info">Rol Ata</a>
                
            </td>
        </tr>
    }
                    </tbody>
                </table>
                <br />

                
            </div>
        </div>
    </div>
</div>