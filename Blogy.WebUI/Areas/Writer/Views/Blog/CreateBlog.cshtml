@model CreateBlogDto
@{
    ViewData["Title"] = "CreateBlog";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}

<div class="row">

    <!-- 🤖 YAPAY ZEKA PANELİ -->
    <div class="col-md-4 grid-margin stretch-card">
        <div class="card bg-primary text-white">
            <div class="card-body d-flex flex-column">
                <h4 class="mb-3">
                    🤖 Yapay Zeka ile İçerik Üret
                </h4>

                <form asp-action="CreateBlogByAI" method="post" class="flex-grow-1 d-flex flex-column">
                    <div class="form-group flex-grow-1">
                        <label>Konu / Cümle</label>
                        <textarea name="cumle"
                                  class="form-control"
                                  rows="8"
                                  placeholder="Örn: Yapay zekanın yazılım sektörüne etkisi"></textarea>

                                  <br />
                        <button type="submit" class="btn btn-light ">
                            İçerik Üret
                        </button>
                    </div>

                   
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-8 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="mb-4">Yeni Blog Oluştur</h3>

                <form asp-action="CreateBlog" method="post">

                    <div class="form-group">
                        <label>Blog Başlığı</label>
                        <input asp-for="Title" class="form-control" />
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>

                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea asp-for="Description"
                                  class="form-control"
                                  rows="12"></textarea>
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>

                    <div class="form-group">
                        <label>Kapak Resmi</label>
                        <input asp-for="CoverImage" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Blog Resmi 1</label>
                        <input asp-for="BlogImage1" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Blog Resmi 2</label>
                        <input asp-for="BlogImage2" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Kategori</label>
                        <select asp-for="CategoryId"
                                class="form-control"
                                asp-items="@ViewBag.categories">
                            <option selected disabled>Kategori Seçiniz</option>
                        </select>
                    </div>

                    <button class="btn btn-primary mt-3">
                        Kaydet
                    </button>

                </form>
            </div>
        </div>
    </div>

</div>

