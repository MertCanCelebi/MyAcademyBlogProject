<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="author" content="Untree.co">
	<link rel="shortcut icon" href="favicon.png">

	<meta name="description" content="" />
	<meta name="keywords" content="bootstrap, bootstrap5" />

	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@400;600;700&display=swap" rel="stylesheet">


	<link rel="stylesheet" href="~/blogy-1.0.0/fonts/icomoon/style.css">
	<link rel="stylesheet" href="~/blogy-1.0.0/fonts/flaticon/font/flaticon.css">

	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

	<link rel="stylesheet" href="~/blogy-1.0.0/css/tiny-slider.css">
	<link rel="stylesheet" href="~/blogy-1.0.0/css/aos.css">
	<link rel="stylesheet" href="~/blogy-1.0.0/css/glightbox.min.css">
	<link rel="stylesheet" href="~/blogy-1.0.0/css/style.css">

	<link rel="stylesheet" href="~/blogy-1.0.0/css/flatpickr.min.css">


	<title>Blogy &mdash; Free Bootstrap 5 Website Template by Untree.co</title>
</head>
<body>

	<div class="site-mobile-menu site-navbar-target">
		<div class="site-mobile-menu-header">
			<div class="site-mobile-menu-close">
				<span class="icofont-close js-menu-toggle"></span>
			</div>
		</div>
		<div class="site-mobile-menu-body"></div>
	</div>

	<nav class="site-nav">
		<div class="container">
			<div class="menu-bg-wrap">
				<div class="site-navigation">
					<div class="row g-0 align-items-center">
						<div class="col-2">
							<a href="/Default/Index" class="logo m-0 float-start">Blogy<span class="text-primary">.</span></a>
						</div>
						<div class="col-8 text-center">
							<form action="#" class="search-form d-inline-block d-lg-none">
								<input type="text" class="form-control" placeholder="Search...">
								<span class="bi-search"></span>
							</form>

							<ul class="js-clone-nav d-none d-lg-inline-block text-start site-menu mx-auto">
								<li class="active"><a href="/Default/Index">Anasayfa</a></li>								
								<li><a href="/About/Index">Hakkımızda</a></li>
								<li><a href="/Blog/Index/">Bloglar</a></li>
								<li><a href="/Contact/Index">İletişim</a></li>
								@if (User.Identity!.IsAuthenticated)
								{
									if (User.IsInRole("Admin"))
									{
										<li>
											<a href="/Admin/Dashboard/Index">Yönetim Paneli</a>
										</li>
									}
									else if (User.IsInRole("Writer"))
									{
										<li>
											<a href="/Writer/Blog/Index">Yazar Paneli</a>
										</li>
									}
									else if (User.IsInRole("User"))
									{
										<li>
											<a href="/User/Comment/Index">Kullanıcı Paneli</a>
										</li>

									}
									<li>
										<a href="/Login/Logout/">Çıkış Yap</a>
									</li>
								}
								else
								{
									<li>
										<a href="/Login/Index/">Giriş Yap</a>
									</li>
								}
							</ul>
						</div>
						<div class="col-2 text-end">
							<a href="#" class="burger ms-auto float-end site-menu-toggle js-menu-toggle d-inline-block d-lg-none light">
								<span></span>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</nav>

	@RenderBody()


	<footer class="site-footer">
		<div class="container">
			<div class="row">
				<div class="col-lg-4">

					@await Component.InvokeAsync("_UILayoutFooterAboutComponent")
					@await Component.InvokeAsync("_UILayoutFooterSocialComponent")
				</div>
				<div class="col-lg-4 ps-lg-5">
					<div class="widget">
						<h3 class="mb-4">Şirket</h3>
						<ul class="list-unstyled float-start links">
							<li><a href="/About/Index">Hakkımızda</a></li>
							<li><a href="/Contact/Index">İletişim</a></li>
							<li><a href="/Blog/Index">Bloglar</a></li>
						</ul>

					</div>
				</div>
				@await Component.InvokeAsync("_UILayoutFooterLast3BlogsComponent")
			</div> 

			<div class="row mt-5">
				<div class="col-12 text-center">
					<!--
						**==========
						NOTE:
						Please don't remove this copyright link unless you buy the license here https://untree.co/license/
						**==========
					  -->

					<p>
						Copyright &copy;<script>document.write(new Date().getFullYear());</script>. All Rights Reserved. &mdash; Designed with love by <a href="https://untree.co">Untree.co</a>  Distributed by <a href="https://themewagon.com">ThemeWagon</a> <!-- License information: https://untree.co/license/ -->
					</p>
				</div>
			</div>
		</div> 
	</footer> 
	<div id="overlayer"></div>
	<div class="loader">
		<div class="spinner-border text-primary" role="status">
			<span class="visually-hidden">Loading...</span>
		</div>
	</div>


	<script src="~/blogy-1.0.0/js/bootstrap.bundle.min.js"></script>
	<script src="~/blogy-1.0.0/js/tiny-slider.js"></script>

	<script src="~/blogy-1.0.0/js/flatpickr.min.js"></script>


	<script src="~/blogy-1.0.0/js/aos.js"></script>
	<script src="~/blogy-1.0.0/js/glightbox.min.js"></script>
	<script src="~/blogy-1.0.0/js/navbar.js"></script>
	<script src="~/blogy-1.0.0/js/counter.js"></script>
	<script src="~/blogy-1.0.0/js/custom.js"></script>




</body>
</html>
