@model CreateMessageDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="hero overlay inner-page bg-primary py-5">
	<div class="container">
		<div class="row align-items-center justify-content-center text-center pt-5">
			<div class="col-lg-6">
				<h1 class="heading text-white mb-3" data-aos="fade-up">İletişim</h1>
			</div>
		</div>
	</div>
</div>

<div class="section">
	<div class="container">
		<div class="row">
			@await Component.InvokeAsync("_GetContactsComponent")

			<div class="col-lg-8" data-aos="fade-up" data-aos-delay="200">
				@* <p>@ViewBag.response</p> *@
				<form method="post">
					<div class="row">
						<div class="col-6 mb-3">
							<input type="text" asp-for="Name" class="form-control" placeholder="İsminiz" />
							<span class="text-danger" asp-validation-for="Name"></span>
						</div>
						<div class="col-6 mb-3">
							<input type="email" asp-for="Email" class="form-control" placeholder="Email Adresiniz" />
							<span class="text-danger" asp-validation-for="Email"></span>

						</div>
						<div class="col-12 mb-3">
							<input type="text" asp-for="Subject" class="form-control" placeholder="Konu" />
							<span class="text-danger" asp-validation-for="Subject"></span>

						</div>
						<div class="col-12 mb-3">
							<textarea asp-for ="Content" cols="30" rows="7" class="form-control" placeholder="Mesaj"></textarea>
							<span class="text-danger" asp-validation-for="Content"></span>
						</div>

						<div class="col-12">
							<input type="submit" value="Mesaj Gönder" class="btn btn-primary">
						</div>
					</div>
				</form>

			</div>

		</div>
	</div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
	document.addEventListener("DOMContentLoaded", function () {
		// Encode ederek veriyi alıyoruz, böylece tırnak işaretleri JS'i bozmaz
		var message = @Json.Serialize(ViewBag.response);

		if (message && message.trim() !== "") {
			Swal.fire({
				title: 'Mesaj Durumu',
				text: message,
				icon: 'success',
				confirmButtonText: 'Tamam'
			});
		}
	});
</script>