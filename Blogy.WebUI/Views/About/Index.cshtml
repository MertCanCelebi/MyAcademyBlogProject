@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}
<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('images/hero_5.jpg');">
	<div class="container">
		<div class="row same-height justify-content-center">
			<div class="col-md-6">
				<div class="post-entry text-center">
					<h1 class="mb-4">Hakkımızda</h1>
				</div>
			</div>
		</div>
	</div>
</div>
<br />
<br />
@foreach(var item in Model)
{
	<div class="section sec-halfs py-0">
		<div class="container">
			<div class="half-content d-lg-flex align-items-stretch">
				<div class="img" style="background-image: url('@item.ImageUrl1')" data-aos="fade-in" data-aos-delay="100">
				</div>
				<div class="text">
					<h2 class="heading text-primary mb-3">@item.Title1</h2>
					<p class="mb-4">@item.Description1 .</p>
				</div>
			</div>

			<div class="half-content d-lg-flex align-items-stretch">
				<div class="img order-md-2" style="background-image: url('@item.ImageUrl2')" data-aos="fade-in">
				</div>
				<div class="text">
					<h2 class="heading text-primary mb-3">@item.Title2</h2>
					<p class="mb-4">@item.Description2 .</p>
				</div>
			</div>
		</div>

	</div>
}

<br />
<br />






